{{#> components/page/page align="center" }}
    {{#> components/typography/typography variant="h1" color="main" }}
        Регистрация
    {{/components/typography/typography}}
    {{#> components/form/form }}
        {{> components/input/input type="email" id="email" name="email" label="Почта" }}
        {{> components/input/input type="text" id="login" name="login" label="Логин" }}
        {{> components/input/input type="text" id="first_name" name="first_name" label="Имя" }}
        {{> components/input/input type="text" id="second_name" name="second_name" label="Фамилия" }}
        {{> components/input/input type="text" id="phone" name="phone" label="Телефон" }}
        {{> components/input/input type="password" id="password" name="password" label="Пароль" }}
        {{> components/input/input type="password" id="re_password" name="re_password" label="Повторите пароль" }}
        {{#> components/button/button type="submit" }}
            {{#> components/typography/typography variant="bodyL" color="white" }}
                Зарегистрироваться
            {{/components/typography/typography}}
        {{/components/button/button}}
    {{/components/form/form}}
    {{#> components/question-link/question-link href="/src/pages/login/login.hbs" question="Уже зарегистированы?" }}
        Войти
    {{/components/question-link/question-link}}
{{/components/page/page}}